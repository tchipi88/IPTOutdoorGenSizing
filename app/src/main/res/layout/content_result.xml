<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/content_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin"
        tools:context="ihstowers.iptoutdoorgensizing.ResultActivity"
        tools:showIn="@layout/activity_result">


        <TextView
            android:id="@+id/site"
            style="@style/TextCardViewHeader"
            android:text="Site Name" />

        <android.support.v7.widget.CardView style="@style/CardViewStyle"  android:id="@+id/result_data">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/TextCardViewBold"
                    android:text="Result Data" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/battery_nocharge"
                    style="@style/SwitchCompatStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/battery_charge"
                    android:textOn="Yes"
                    android:textOff="No"/>

                <TextView
                    android:id="@+id/Ich"
                    style="@style/TextCardViewBold" />

                <TextView
                    android:id="@+id/Ich_"
                    style="@style/TextCardView"
                    android:text="@string/battery_charge_current_a" />

                <TextView
                    android:id="@+id/t"
                    style="@style/TextCardViewBold" />

                <TextView
                    android:id="@+id/t_"
                    style="@style/TextCardView"
                    android:text="@string/autonomy" />

                <TextView
                    android:id="@+id/s"
                    style="@style/TextCardViewBold" />

                <TextView
                    android:id="@+id/s_nocharge"
                    android:visibility="gone"
                    style="@style/TextCardViewBold" />

                <TextView
                    style="@style/TextCardView"
                    android:text="@string/generator_capacity_kva" />

                <TextView
                    android:id="@+id/nn"
                    style="@style/TextCardViewBold" />

                <TextView
                    style="@style/TextCardView"
                    android:text="@string/nomber_of_rectifiers_need" />

                <TextView
                    android:id="@+id/gen_power_limitation"
                    style="@style/TextCardViewBold" />

                <TextView
                    style="@style/TextCardView"
                    android:text="@string/gen_power_limitation" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/CardViewStyle" android:id="@+id/input_data">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/TextCardViewBold"
                    android:text="Input Data" />


                <TextView
                    android:id="@+id/i"
                    style="@style/TextCardViewBold" />

                <TextView
                    style="@style/TextCardView"
                    android:text="@string/load_current_a" />


                <TextView
                    android:id="@+id/c"
                    style="@style/TextCardViewBold" />

                <TextView
                    style="@style/TextCardView"
                    android:text="@string/battery_capacity_ah" />


                <TextView
                    android:id="@+id/n"
                    style="@style/TextCardViewBold" />

                <TextView
                    style="@style/TextCardView"
                    android:text="@string/nomber_of_battery_string" />


                <TextView
                    android:id="@+id/pu"
                    style="@style/TextCardViewBold" />

                <TextView
                    style="@style/TextCardView"
                    android:text="@string/rectifier_module_size_w" />


                <TextView
                    android:id="@+id/paircon"
                    style="@style/TextCardViewBold" />

                <TextView
                    style="@style/TextCardView"
                    android:text="@string/aircon_size" />

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>